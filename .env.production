# OrderFi AI - Production Environment Configuration
# Akash Network Deployment

NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://orderfi:${DB_PASSWORD}@orderfi-db:5432/orderfi
PGHOST=orderfi-db
PGPORT=5432
PGUSER=orderfi
PGDATABASE=orderfi

# Redis Configuration
REDIS_URL=redis://orderfi-redis:6379

# Akash Chat API Configuration
AKASH_API_ENDPOINT=https://chatapi.akash.network/v1
AKASH_API_KEY=${AKASH_API_KEY}

# Blockchain Configuration
BLOCKCHAIN_NETWORK=base
BASE_RPC_URL=https://mainnet.base.org
POLYGON_RPC_URL=https://polygon-rpc.com

# Security Configuration
JWT_SECRET=${JWT_SECRET}
SESSION_SECRET=${SESSION_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# Service URLs (set by Akash deployment)
ORDERFI_APP_URL=https://orderfi.akash.network
API_BASE_URL=https://orderfi.akash.network/api

# Feature Flags
ENABLE_BLOCKCHAIN=true
ENABLE_VOICE_CHAT=true
ENABLE_KITCHEN_PRINTING=true
ENABLE_TOKEN_REWARDS=true

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
LOG_LEVEL=info

# IPFS Configuration (optional)
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/
PINATA_API_KEY=${PINATA_API_KEY}
PINATA_SECRET_KEY=${PINATA_SECRET_KEY}